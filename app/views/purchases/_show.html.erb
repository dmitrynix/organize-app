<%= show_for @object do |purchase| %>
  <%= purchase.attribute :title %>
  <%= purchase.attribute :value do %>
    <%= number_to_currency @object.value  %>
  <% end %>
  <%= purchase.attribute :tags do %>
    <%= tags_with_link @object.tags %>
  <% end %>
  <%= purchase.attribute :purchased_at %>
  <%= purchase.attribute :created_at %>
  <%= purchase.attribute :updated_at %>
<% end %>
