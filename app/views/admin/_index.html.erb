<table class="table table-striped table-bordered">
  <tr>
    <th><%= t "simple_form.labels.#{controller_name.singularize}.name" %></th>
    <th></th>
  </tr>

  <% @objects.each do |object| %>
    <tr id="<%= dom_id object %>">
      <td><%= object %></td>
      <td><%= link_to t('actions.show'), object, :class => :btn %></td>
    </tr>
  <% end %>
</table>
